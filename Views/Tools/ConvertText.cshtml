@model IEnumerable<RioManager.Controllers.ToolsController>
@{
    ViewBag.Title = "ConvertText";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ConvertText = "";
    if (ViewBag.ConvertText != null)
    {
        ConvertText = ViewBag.ConvertText;
    }
}

<h2>ConvertText</h2>
@using (Html.BeginForm())
{
<div class="container">
        輸入：@Html.TextBox("input", null, htmlAttributes: new { @class = "form-control" })
        輸出：@Html.TextBox("output", null, htmlAttributes: new { @class = "form-control" })
        加密：@Html.RadioButton("coding", "Encrypt",true )
        解密：@Html.RadioButton("coding", "Decrypt", false)
        <input type="submit" class="btn btn-default" id="btnEncrypt" value="送出" />        
    </div>
}
