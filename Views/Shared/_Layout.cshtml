<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RioManager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/fancybox")
    @{Html.RenderAction("LoingChecked", "Rio_Account"); }
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen" />
    <script>
        $(document).ready(function () {
            $(".fancybox").fancybox({
                openEffect: "none",
                closeEffect: "none"
            });
        }); 
    </script>
</head>
<body>    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RioStudioMVC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("首頁", "Index", "Home")</li>
                    @{
                        var ID = "";
                        if (Context.Session["UserID"] != null)
                        {
                            ID = Context.Session["UserID"].ToString();
                        }
                        if (ID == "Rio")
                        {
                            <li>@Html.ActionLink("帳號", "Index", "Rio_Account")</li>
                        }
                    }}
                    
                    <li>@Html.ActionLink("圖片", "RioPicView", "Rio_Pic")</li>
                    <li>@Html.ActionLink("文件", "RioDocView", "Rio_Doc")</li>
                    <li>@Html.ActionLink("相簿", "RioAlbumView", "Rio_Album")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar navbar-inverse navbar-fixed-bottom">
            <div class="container">
                <div class="navbar-btn">
                    <p style="color:white;">&copy; @DateTime.Now.Year - RioStudioMVC</p>
                </div>
            </div>
        </footer>
    </div>    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
