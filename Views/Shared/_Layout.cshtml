<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RioManager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/fancybox")    
    @Scripts.Render("~/bundles/infinitescroll")
    @Scripts.Render("~/bundles/RioTools")
    @{Html.RenderAction("LoingChecked", "Rio_Account"); }
    @{ 
        var vid = string.Empty;
        if(Session["UserID"] != null)
        {
            vid = Session["UserID"].ToString();
        }
    }
</head>
<body>    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RioStudioMVC", "Index", "Home", new { vid = @vid }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("首頁", "Index", "Home", new { vid = @vid },null)</li>                    
                    @if (vid == "Rio")
                    {
                        <li>@Html.ActionLink("帳號", "Index", "Rio_Account")</li>
                    }                                        
                    <li>@Html.ActionLink("圖片", "RioPicView", "Rio_Pic", new { vid = @vid }, null)</li>
                    <li>@Html.ActionLink("相簿", "RioAlbumView", "Rio_Album", new { vid = @vid }, null)</li>
                    <li>@Html.ActionLink("文件", "RioDocView", "Rio_Doc", new { vid = @vid }, null)</li>
                    <li>@Html.ActionLink("個人資料", "UserSetting", "Rio_Account", new { vid = @vid }, null)</li>
                    <li>@Html.ActionLink("登出","Logout","Rio_Account")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="">
        @RenderBody()
        <hr />
        <footer class="navbar navbar-inverse navbar-fixed-bottom">
            <div class="container">
                <div class="navbar-btn">
                    <p style="color:white;">&copy; @DateTime.Now.Year - RioStudioMVC</p>
                </div>
            </div>
        </footer>
    </div>    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
