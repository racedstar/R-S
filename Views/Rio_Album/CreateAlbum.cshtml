
@{
    Layout = null;
    int AlbumSN = ViewBag.aSN;
    var VwAlbumName = string.Empty;
    var VwAlbumEnable = true;
    var createBtn = "inline";
    var updateBtn = "none";
    if(AlbumSN != 0) {
        createBtn = "none";
        updateBtn = "inline";
        VwAlbumName = ViewBag.VwAlbum.AlbumName;
        VwAlbumEnable = ViewBag.VwAlbum.IsEnable;
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateAlbum</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/createAlbum")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="">
    <div class="body-content"> 
        <div class="row">
            <div class="col-md-6">
                <div id="frontCover" class="frontCover" ondrop="cloneDrop(event)" ondragover="allowDrop(event)">
                    @if (AlbumSN != 0)
                    {
                        var forntCoverID = ViewBag.VwAlbum.FrontCoverSN + "==fronCover";
                        var path = ViewBag.VwAlbum.PicPath;
                        var PicName = ViewBag.VwAlbum.PicName;
                        <img id="@forntCoverID" src="@path@PicName" />
                    }
                </div>
                相簿名稱：<input type="text" id="txtTitle" value="@VwAlbumName"  />
                啟用：<input type="checkbox" id="chkEnable" checked="@VwAlbumEnable" />
            </div>
            <div class="col-md-6 text-right">
                <input id="createAlbumBtn" data-fancybox-close class="btn btn-success"  type="button" value="建立相簿" onclick="SaveData(0)" style="display:@createBtn;"  />
                <input id="updateAlbumBtn" data-fancybox-close class="btn btn-success" type="button" value="修改相簿" onclick="SaveData(1)" style="display:@updateBtn;"/>
            </div>
        </div>
        <div class="row createAlbumBottom">
            <div  id="NotJoinedPic" class="col-md-6 row" ondrop="dragPhoto('JoinedPic',event)" ondragover="allowDrop(event)">
                @{
                    var notJoinData = @ViewBag.getNotJoinPic;
                }                
                @if(notJoinData != null)
                {
                    foreach (var item in notJoinData)
                    {
                    <div id="@item.SN" class="col-md-3 createAlbumDiv" style="background-image:url(@item.PicPath/Scaling/@item.PicName)" onclick="imgClick(event)" draggable="true" ondragstart="drag(event)"  onmouseover="mouseOver(event)" onmousemove="mouseMove(event)" onmouseout="mouseOut(event)"></div>
                    }
                }
            </div>
            <div id="JoinedPic" class="col-md-6 row" ondrop="dragPhoto('NotJoinedPic',event)" ondragover="allowDrop(event)">
                @{ 
                    var joinData = ViewBag.getJoinPic;
                }
                @if(joinData != null)
                {
                    foreach (var item in joinData)
                    {
                        <div id="@item.PicSN" class="col-md-3 createAlbumDiv" style="background-image:url(@item.PicPath/Scaling/@item.PicName)" ondrop="dragPhoto('sort',event)" ondragover="allowDrop(event)" onclick="imgClick(event)" draggable="true" ondragstart="drag(event)" onmouseover="mouseOver(event)" onmousemove="mouseMove(event)" onmouseout="mouseOut(event)"></div>
                    }
                }
            </div>
        </div>
    </div>
</body>
</html>
