@model IPagedList<RioManager.Models.Vw_Notice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var notice = ViewBag.notice;
}

<div class="container systemContainer">
    <div class="topBar">
        <h2>Notice</h2>
    </div>
    <div class="row form-group systemGroup">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Content</th>
                    <th scope="col">DateTime</th>
                </tr>
            </thead>
            <tbody>
            @{
                foreach (var item in notice)
                {
                    <tr>
                        <th><a href="~/Home/Index?vid=@item.ID">@item.ID</a></th>
                        <th>@item.NoticeContent</th>
                        <th>@item.CreateDate.ToString("yyyy-MM-dd HH:mm")</th>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>

<div class="container">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    <p>End of content</p>
</div>
